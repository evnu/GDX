<% content_for :title do %>
  Home
<% end %>

<% content_for :content do %>
  <h2 class="entry-title">List of Users</h2>
  <% @users.each do |user| %>
    <p>User: <%= link_to user.name, user %></p>
  <% end %>

  <h2 class="entry-title">Uploads</h2>
  <p>
  You can find a searchable list of uploads by following the link
  <%= link_to "/uploads", "/uploads" %>. Note that you have to be authenticated
  as a user to access that page.
  </p>

  <% if admin_signed_in? or Rails.env.development? %>
    <h2 class="entry-title">Administration Links</h2>
    <ul>
      <li><%= link_to "Create User", "/register_users" %></li>
    </ul>
  <% end %>
<% end %>
