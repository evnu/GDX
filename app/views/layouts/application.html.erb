<!DOCTYPE html>
<html>
<head>
  <title>GridFS</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  <h1><%= link_to "GDX", "/" %></h1>

  <ul class="hmenu">
    <%= render 'devise/menu/login_items' %>
  </ul>
  <div class="nav">
    <ul>
      <li><%= link_to "Home", "/" %> </li>
      <li><%= link_to "Uploads", "/uploads" %></li>
    </ul> 
  </div>
  <%- flash.each do |name, msg| -%>
    <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
  <%- end -%>

<%= yield %>

<% if Rails.env.development? %>
  <p>
  <%= debug(params) %>
  </p>
<% end %>
</body>
</html>
