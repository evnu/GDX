  <!DOCTYPE html>
  <html>
  <head>
    <title>GridFS</title>
    <%= stylesheet_link_tag :all %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
    <%= include_tiny_mce_if_needed %>
  </head>
  <body class="home blog single-author two-column right-sidebar">
    <div id="page" class="hfeed">
      <header id="branding" role="banner">
      <hgroup>
      <h1 id="site-title"><%= link_to "GDX", "/" %></h1>
      <h2 id="site-title">Geographical Data eXchange</h2>
    </hgroup>
    <img src="http://studium.moritzborgmann.de/wp-content/themes/twentyeleven/images/headers/trolley.jpg" width="1000" height="288" alt="" />
    <form method="get" id="searchform" action="http://studium.moritzborgmann.de/">

      <div class="nav">
        <ul class="hmenu">
          <%= render 'devise/menu/login_items' %>
        </ul>
      </div>
	</form>
      <nav id="access" role="navigation">
      <h3 class="assistive-text">Hauptmen√º</h3>
            <ul>
              <li class="current_page_item"><%= link_to "Home", "/" %> </li>
              <li class="page_item page-item-2"><%= link_to "Uploads", "/uploads" %></li>
            </ul> 
      </nav>
    </header>

<!-- content //--> 
    <div id="main">
      <div id="primary">
        <div id="content" role="main">
          <h2 class="entry-title"><%= yield :title %></h2>
          <div class="entry-content">
                    <%- flash.each do |name, msg| -%>
                      <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
                    <%- end -%>
          
                    <%= yield :content %>
          </div>
        </div>
      </div>
    </div>
  
  <footer id="colophon" class="contentinfo">
    <% if Rails.env.development? %>
      <p>
      <%= debug(params) %>
      </p>
    <% end %>
  </footer>
  </div>
</body>
</html>
