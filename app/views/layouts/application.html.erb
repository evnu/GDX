  <!DOCTYPE html>
  <html>
  <head>
    <title>GridFS</title>
    <%= stylesheet_link_tag :all %>
    <%= javascript_include_tag :defaults %>
    <%= javascript_include_tag "unfold" %>
    <%= csrf_meta_tag %>
    <%= include_tiny_mce_if_needed %>
  </head>
  <body class="home blog single-author two-column right-sidebar">
    <div id="page" class="hfeed">
      <header id="branding" role="banner" style="background-image: url(/images/scaled.JPG)">
      <hgroup>
      <h1 id="site-title"><%= link_to "GDX", "/", :class => "white-background" %></h1>
      <h2 id="site-description">Geographical Data eXchange</h2>
      <div id="searchform">
        <div class="nav">
          <ul class="hmenu">
            <%= render 'devise/menu/login_items' %>
          </ul>
        </div>
      </div>
      </hgroup>
      <nav id="access" role="navigation">
      <h3 class="assistive-text"><%= t('assistive.main_menu') %></h3>
            <div class="menu">
                        <ul>
                          <li class="<%= highlight_link("home") %>"><%= link_to "Home", "/" %> </li>
                          <li class="<%= highlight_link("uploads") %>"><%= link_to "Uploads", "/uploads" %></li>
                        </ul> 
            </div>
      </nav>
    </header>

<!-- content //--> 
    <div id="main">
      <div id="primary">
        <div id="content" role="main">
          <h2 class="entry-title"><%= yield :title %></h2>
          <div class="entry-content">
                    <%- flash.each do |name, msg| -%>
                      <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
                    <%- end -%>
          
                    <%= yield :content %>
          </div>
        </div>
      </div>

      <div id="secondary" class="widget-area" role="complementary">
        <aside id="archives" class="widget">
        <h3 class="widget_title">
          <%= yield :widgettitle %>
        </h3>
        <%= yield :widget %>
        </aside>
      </div>
    </div>
  
  <footer id="colophon" class="contentinfo">
    <% if Rails.env.development? %>
      <p>
      <%= debug(params) %>
      </p>
    <% end %>
  </footer>
  </div>
</body>
</html>
