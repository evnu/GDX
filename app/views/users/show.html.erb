<% content_for :title do %>
<%= @user.name %>
<% end %>

<% content_for :content do %>
<p>
This is the personal page of <%= @user.name %>.
</p>

<% if user_signed_in? %>
<h3>List of Files</h3>
<%= paginate @paginated_uploads %>
<table>
  <tr>
    <th>Filename</th>
    <th>Tags</th>
    <th></th>
    <th></th>
  </tr>
  <% @paginated_uploads.each do |u| %>
    <tr>
      <td><%= link_to u.name, u.file.url %></td>
      <td><%= u.tag_list %></td>
      <td><%= link_to 'Edit', edit_upload_path(u) %></td>
      <td><%= link_to 'Destroy', u, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>
<%= paginate @paginated_uploads %>
<% end %>

<% end %>
